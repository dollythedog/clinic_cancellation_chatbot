# ============================================================================
# Clinic Cancellation Chatbot - Development Environment
# ============================================================================
# Copy this to .env and update with your actual values

# ----------------------------------------------------------------------------
# DATABASE
# ----------------------------------------------------------------------------
# For Docker:
DATABASE_URL=postgresql://chatbot_user:chatbot_dev_password@localhost:5432/clinic_chatbot

# For local PostgreSQL (update password):
# DATABASE_URL=postgresql://chatbot_user:your_password@localhost:5432/clinic_chatbot

# ----------------------------------------------------------------------------
# TWILIO (Get these from https://console.twilio.com/)
# ----------------------------------------------------------------------------
# For now, use mock mode to skip Twilio setup
USE_MOCK_TWILIO=true
ENABLE_SMS_SENDING=false

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+12145551234

# ----------------------------------------------------------------------------
# APPLICATION
# ----------------------------------------------------------------------------
BATCH_SIZE=3
HOLD_MINUTES=7
CONTACT_HOURS_START=08:00
CONTACT_HOURS_END=20:00
TIMEZONE=America/Chicago

# ----------------------------------------------------------------------------
# DEVELOPMENT
# ----------------------------------------------------------------------------
DEBUG=true
LOG_LEVEL=DEBUG
ENABLE_WEBHOOKS=false
SEED_TEST_DATA=false

# ----------------------------------------------------------------------------
# FEATURE FLAGS (for testing without external dependencies)
# ----------------------------------------------------------------------------
ENABLE_SMS_SENDING=false
ENABLE_PRIORITY_RECALC=true
